{
    "name": "sven/tlsify",
    "description": "Find and replace all insecure links in a directory with HTTPS",
    "keywords": ["https", "links", "urls", "secure", "insecure", "automatic", "cli"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Luijten",
            "email": "svenluijten1995@gmail.com",
            "homepage": "https://svenluijten.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "spatie/regex": "^1.3",
        "symfony/finder": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Sven\\Tlsify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sven\\Tlsify\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
